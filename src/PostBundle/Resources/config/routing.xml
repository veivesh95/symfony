<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="post_homepage" path="/">
        <default key="_controller">PostBundle:Default:index</default>
    </route>
    <route id="post_homepage1" path="/posts">
        <default key="_controller">PostBundle:Post:index</default>
    </route> 
    <route id="post_homepage2" path="/posts1">
        <default key="_controller">PostBundle:Post:create</default>
    </route>
    <route id="post_homepage6" path="/categories">
        <default key="_controller">PostBundle:Post:createCat</default>
    </route>
    <route id="post_homepage3" path="/post/{postId}">
        <default key="_controller">PostBundle:Post:show</default>
    </route>
    <route id="post_homepage4" path="/post-update/{postId}">
        <default key="_controller">PostBundle:Post:update</default>
    </route>
    <route id="post_homepage5" path="/post-delete/{postId}">
        <default key="_controller">PostBundle:Post:delete</default>
    </route>
</routes>
